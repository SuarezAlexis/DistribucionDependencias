@using DistribucionDependencias.Domain.Entities
@model IEnumerable<Lista>

@{
    ViewBag.Title = "Listas";
}

<div class="col-xs-2">
    
</div>
<div class="col-xs-8">

    <h2>Listas de compras</h2>
    @using (Html.BeginForm())
    {

    }

    @if (Model.Count() == 0)
    {
        <div class="text-center">
            No se ha creado ninguna lista de compras
        </div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>ID</tr>
                <tr>Nombre</tr>
            </thead>
            <tbody>
                @foreach (var l in Model)
                {
                    <tr>
                        <td class="text-center">@l.ListaID</td>
                        <td class="text-left">@l.Nombre</td>
                    </tr>
                }
            </tbody>
        </table>
        }
</div>

